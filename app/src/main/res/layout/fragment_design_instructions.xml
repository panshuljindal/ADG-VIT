<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    tools:context=".design_instructions"
    android:background="#fff">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:id="@+id/Designtesthead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" >

            <Button
                android:id="@+id/back_button_di"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_icon_feather_arrow_left"
                />
            <TextView
                android:id="@+id/TestHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/helveticaneue_medium"
                android:text="Design Test"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                android:textColor="#000"
                android:textSize="30dp"
                app:layout_constraintStart_toEndOf="@+id/back_button_dt"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>

        <TextView
            android:id="@+id/chooseTextViewDes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/helveticaneu_bold"
            android:textSize="20dp"
            android:textColor="#395AFF"
            android:text="You have choosen Design"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Designtesthead"
            />

        <LinearLayout
            android:id="@+id/timetxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/timetxtbg"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chooseTextViewDes">

            <TextView
                android:id="@+id/fromInstTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/helveticaneue_regular"
                android:text="Duration : "
                android:textColor="#000000"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/fromInstTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/helveticaneu_bold"
                android:text="10 Mins"
                android:textColor="@color/black"
                android:textSize="16dp"
                app:layout_constraintStart_toEndOf="@id/fromInstTextView" />
        </LinearLayout>


        <TextView
            android:id="@+id/InstructionsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/helveticaneu_bold"
            android:text="Instructions"
            android:textColor="@color/black"
            android:textSize="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/timetxt" />

        <LinearLayout
            android:id="@+id/InstructionsPoint1Des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/InstructionsText"
            >
            <View
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/ic_dot"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/helveticaneue_regular"
                android:text="The participant can attempt the quiz only ONCE."
                android:textColor="#000000"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/InstructionsPoint2Des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/InstructionsPoint1Des"
            >
            <View
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/ic_dot"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/helveticaneue_regular"
                android:text="The quiz will have 10 Multiple choice questions."
                android:textColor="#000000"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/InstructionsPoint3Des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/InstructionsPoint2Des"
            >
            <View
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/ic_dot"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/helveticaneue_regular"
                android:text="10 minutes will be provided to complete the quiz."
                android:textColor="#000000"
                android:textSize="16dp" />

        </LinearLayout>

        <Button
            android:id="@+id/startButton_di"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/quiznext"
            android:fontFamily="@font/helveticaneu_bold"
            android:text="Start"
            android:layout_marginTop="55dp"
            android:layout_marginBottom="30dp"
            android:textAllCaps="false"
            android:textColor="#4766FF"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/InstructionsPoint4Des" />

        <LinearLayout
            android:id="@+id/InstructionsPoint4Des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            app:layout_constraintTop_toBottomOf="@+id/InstructionsPoint3Des"
            tools:layout_editor_absoluteY="536dp">

            <View
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_dot" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/helveticaneue_regular"
                android:text="In case the participant tries to close the app or go back from the quiz, it shall be considered cheating and the quiz will be auto submitted."
                android:textColor="#000000"
                android:textSize="16dp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>