<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".secondYear1">

        <TextView
            android:id="@+id/twoHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/helveticaneu_bold"
            android:text="Technical Round"
            android:textAlignment="center"
            android:textColor="#0C233C"
            android:textSize="35dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/twoHeading">

            <TextView
                android:id="@+id/q1D"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/helveticaneu_bold"
                android:text="Please enter a breif description about yourself"
                android:textColor="#395AFF"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/secondq1A"
                android:layout_width="match_parent"
                android:layout_height="161dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/management_edittext"
                android:ems="10"
                android:scrollbars="vertical"
                android:fontFamily="@font/helveticaneue_medium"
                android:gravity="start|top"
                android:hint="Your Answer"
                android:inputType="textCapSentences|textMultiLine"
                android:paddingLeft="10dp"
                android:paddingTop="12dp"
                android:paddingRight="10dp"
                android:textColor="#000"
                android:textColorHint="#707070"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <TextView
                android:id="@+id/q10D"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/helveticaneu_bold"
                android:text="Pleas enter some links which you think that we should know about"
                android:textColor="#395AFF"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/secondq2A"
                android:layout_width="match_parent"
                android:layout_height="161dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/management_edittext"
                android:ems="10"
                android:scrollbars="vertical"
                android:fontFamily="@font/helveticaneue_medium"
                android:gravity="start|top"
                android:hint="Your Answer"
                android:inputType="textCapSentences|textMultiLine"
                android:paddingLeft="10dp"
                android:paddingTop="12dp"
                android:paddingRight="10dp"
                android:textColor="#000"
                android:textColorHint="#707070"
                android:textSize="14dp" />
        </LinearLayout>

    <Button
        android:id="@+id/submit_button_secondTechnical"
        android:layout_width="112dp"
        android:layout_height="45dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/management_submit"
        android:fontFamily="@font/helveticaneu_bold"
        android:text="Submit"
        android:textAllCaps="false"
        android:textColor="#4766FF"
        android:textSize="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout10" />
</androidx.constraintlayout.widget.ConstraintLayout>